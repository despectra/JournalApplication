<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/item_checkable_background">

    <include layout="@layout/item_checkable_checkbox"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkbox1"
        android:layout_centerVertical="true"
        android:textAppearance="?android:textAppearanceListItem"
        android:text="Это красивый текст"
        android:textColor="@drawable/list_item_text_color"
        />

    <include layout="@layout/item_popup_menu_btn"/>

</RelativeLayout>