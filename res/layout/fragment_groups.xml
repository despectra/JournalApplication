<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/entities_list"/>

    <com.despectra.android.journal.Views.StatusBar
        android:id="@+id/groups_status_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="bottom">

    </com.despectra.android.journal.Views.StatusBar>

    <TextView
        android:id="@+id/listview_empty_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/gray_85"
        android:text="Классов нет. Добавьте с помощью кнопки вверху."/>
</LinearLayout>