<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/item_checkable_background">

    <include layout="@layout/item_checkable_checkbox"/>

    <Space
        android:id="@+id/center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkbox1"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/surname_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkbox1"
        android:layout_above="@+id/center_vertical"
        android:textAppearance="?android:textAppearanceListItem"
        android:text="Мансур"
        android:textColor="@drawable/list_item_text_color_light"/>

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_vertical"
        android:layout_toRightOf="@+id/checkbox1"
        android:textAppearance="?android:textAppearanceListItemSmall"
        android:paddingRight="5dp"
        android:text="Миша"
        android:textColor="@drawable/list_item_text_color_light"/>

    <TextView
        android:id="@+id/middlename_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_vertical"
        android:layout_toRightOf="@+id/name_view"
        android:textAppearance="?android:textAppearanceListItemSmall"
        android:text="Александрович"
        android:textColor="@drawable/list_item_text_color_light"/>

    <TextView
        android:id="@+id/login_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/item_popup_menu_btn1"
        android:textAppearance="?android:textAppearanceListItemSmall"
        android:text="omg"
        android:textColor="@drawable/list_item_text_color_light"/>

    <include layout="@layout/item_popup_menu_btn"/>

</RelativeLayout>